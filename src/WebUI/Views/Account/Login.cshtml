@model Application.Accounts.Commands.LoginCommand

@{
    ViewData["Title"] = "Ekran logowania";
}

<div class="h-100 d-flex justify-content-center mt-3">
    <form id="loginForm" class="hotel-width" method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="p-2 text-white rounded-top hotel-bg-color shadow">
            <h4 class="text-center mb-sm-0">Ekran logowania</h4>
        </div>
        <div class="mb-2 rounded-bottom p-sm-2 shadow" style="background-color: lightgray">
            <div class="mb-2">
                <input id="name" type="text" class="form-control rounded-end" name="name" asp-for="Name" placeholder="Login">
                <span id="namespan" class="hotel-validation" asp-validation-for="Name"></span>
                <div asp-validation-summary="@ValidationSummary.ModelOnly" class="hotel-val-summary hotel-validation"></div>
            </div>
            <div class="mb-2">
                <input id="password" type="password" class="form-control rounded-end" name="password" asp-for="Password" placeholder="Hasło">
                <span id="passwordspan" class="hotel-validation" asp-validation-for="Password"></span>
            </div>
            <div class="mb-2">
                <a asp-action="ForgotPassword">Nie pamiętasz hasła?</a>
            </div>
            <div class="mb-2">
                <a asp-action="Register">Zarejestruj się</a>
            </div>
            <div class="text-center">
                <button id="loginBtn" type="submit" class="btn text-white hotel-bg-color">Zaloguj</button>
            </div>
        </div>
    </form>
</div>

<script src="~/js/account/login.js"></script>