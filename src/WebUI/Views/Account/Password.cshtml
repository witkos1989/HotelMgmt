@model Application.Common.DTOs.AccountDetailsDTO

<form method="post" asp-controller="Account" asp-action="Password">
    <div>
        <div asp-validation-summary="@ValidationSummary.ModelOnly" class="hotel-val-summary hotel-validation"></div>
        <div class="mb-2">
            <input id="oldpassword" type="password" class="form-control rounded-end" asp-for="@Model.OldPassword" placeholder="Stare hasło">
            <span id="oldpasswordspan" class="hotel-validation" asp-validation-for="@Model.OldPassword"></span>
        </div>
        <div class="mb-2">
            <input id="newpassword" type="password" class="form-control rounded-end" asp-for="@Model.Password" placeholder="Nowe hasło">
            <span id="newpasswordspan" class="hotel-validation" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="mb-2">
            <input id="confirmpassword" type="password" class="form-control rounded-end" asp-for="@Model.ConfirmPassword" placeholder="Powtórz hasło">
            <span id="confirmpasswordspan" class="hotel-validation" asp-validation-for="@Model.ConfirmPassword"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn text-white hotel-bg-color">Zmień hasło</button>
        </div>
    </div>
</form>